<body>

<div class="container">
    <h2>神緯營造人孔計算機</h2>
    
    <div class="row">
        <div class="flex-row">
            <select id="type" onchange="toggleUI()">
                <option value="1">圓形切割</option>
                <option value="2">矩形切割</option>
            </select>
            <select id="op" onchange="toggleUI()">
                <option value="1">樹脂水泥</option>
                <option value="2">早強打底</option>
                <option value="3">樹脂面層</option>
            </select>
        </div>
    </div>

    <div id="ui-circle">
        <div class="row"><label>框蓋直徑(m):</label><input id="din" type="number" value="0.75" step="0.01"></div>
        <div class="row"><label>切割直徑(m):</label><input id="dout" type="number" value="1.1" step="0.01"></div>
    </div>

    <div id="ui-rect" style="display:none;">
        <div class="row"><label>切割長(m):</label><input id="rl" type="number" value="1.2"></div>
        <div class="row"><label>切割寬(m):</label><input id="rw" type="number" value="1.2"></div>
    </div>

    <div class="row" id="ui-maindeep" style="display:none;">
        <label>面層深度(m):</label>
        <input id="md" type="number" value="0.05" step="0.01">
    </div>

    <div class="row">
        <label>打除深度(m):</label>
        <div class="flex-row">
            <input id="da" type="number" placeholder="深A">
            <input id="db" type="number" placeholder="深B">
        </div>
        <div class="flex-row">
            <input id="dc" type="number" placeholder="深C">
            <input id="dd" type="number" placeholder="深D">
        </div>
    </div>

    <button type="button" onclick="calculate()">開始計算</button>

    <div class="result-box">
        <div class="result-title">計算結果 (已無條件進位)</div>
        <div id="output">請輸入數據並點擊計算</div>
    </div>

    <div class="company-info">
        <img src="logo.png" alt="Company Logo" onerror="this.style.display='none'">
        本計算式模組研發：神緯營造有限公司
    </div>
</div>

<script>
    function toggleUI() {
        var isRect = document.getElementById('type').value === '2';
        var op = document.getElementById('op').value;
        document.getElementById('ui-circle').style.display = isRect ? 'none' : 'block';
        document.getElementById('ui-rect').style.display = isRect ? 'block' : 'none';
        document.getElementById('ui-maindeep').style.display = (op === '2') ? 'block' : 'none';
    }

    function calculate() {
        try {
            var pi = 3.14159;
            var type = document.getElementById('type').value;
            var op = document.getElementById('op').value;
            
            var din = parseFloat(document.getElementById('din').value) || 0;
            var dout = parseFloat(document.getElementById('dout').value) || 0;
            var rl = parseFloat(document.getElementById('rl').value) || 0;
            var rw = parseFloat(document.getElementById('rw').value) || 0;
            var md = parseFloat(document.getElementById('md').value) || 0;
            
            var v1 = parseFloat(document.getElementById('da').value) || 0;
            var v2 = parseFloat(document.getElementById('db').value) || 0;
            var v3 = parseFloat(document.getElementById('dc').value) || 0;
            var v4 = parseFloat(document.getElementById('dd').value) || 0;
            var avgD = (v1 + v2 + v3 + v4) / 4;

            if (avgD <= 0) { alert("請輸入深度數據"); return; }

            var areaIn = pi * Math.pow(din / 2, 2);
            var areaOut = (type === '1') ? pi * Math.pow(dout / 2, 2) : (rl * rw);
            var vol = (areaOut - areaIn);

            var html = "";
            // 所有計算均使用 Math.ceil 進行無條件進位
            if (op === '1') {
                var totalV = vol * avgD;
                html = '<div class="res-item">樹脂水泥A劑: <span class="res-val">' + Math.ceil(totalV * 800 / 20) + '</span> 包</div>' +
                       '<div class="res-item">藥水B劑: <span class="res-val">' + Math.ceil(totalV * 200 / 20) + '</span> 桶</div>' +
                       '<div class="res-item">礫石: <span class="res-val">' + Math.ceil(totalV * 960 / 24) + '</span> 桶</div>';
            } else if (op === '2') {
                var totalV = vol * (avgD - md);
                var base = totalV / 0.1072;
                html = '<div class="res-item">砂: <span class="res-val">' + Math.ceil(base * 4) + '</span> 桶</div>' +
                       '<div class="res-item">石: <span class="res-val">' + Math.ceil(base * 3) + '</span> 桶</div>' +
                       '<div class="res-item">早強: <span class="res-val">' + Math.ceil(base * 1) + '</span> 包</div>';
            } else {
                var totalV = vol * avgD;
                var base = totalV / 0.1072;
                html = '<div class="res-item">砂: <span class="res-val">' + Math.ceil(base * 2) + '</span> 桶</div>' +
                       '<div class="res-item">樹脂: <span class="res-val">' + Math.ceil(base * 1) + '</span> 包</div>';
            }
            
            document.getElementById('output').innerHTML = html;
        } catch (err) {
            alert("計算發生錯誤，請檢查輸入數值。");
        }
    }
</script>

</body>
